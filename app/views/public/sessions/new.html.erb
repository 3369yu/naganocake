<div class='container'>
  <div class='row my-2'>
    <h3 class="col-lg-2 my-3 bg-light text-center">ログイン</h3>
  </div>
  
  <div class='row my-2'>
    <h4 class="col-lg-4 my-3 ml-3 bg-light text-center">会員の方はこちらからログイン</h4>
  </div>

  <%= form_with model:@customer, url: customer_session_path do |f| %>
    <div class='row my-3'>
      <div class='col-lg-2'><%= f.label :"メールアドレス" %></div>
      <div class='col-lg-5'><%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %></div>
    </div>
    
    <div class='row my-3'>
      <div class='col-lg-2'><%= f.label :"パスワード" %></div>
      <div class='col-lg-5'><%= f.password_field :password, autocomplete: "current-password",class: "form-control" %></div>
    </div>
    
    <div class='row my-2'>
      <div class='col-lg-2'></div>
      <div class='col-lg-3'><%= f.submit "ログイン", class:"btn btn-primary w-75" %></div>
    </div>
  <% end %>
  
  <div class="mb-5"></div>
  
    <div class='row my-1'>
      <h4 class="col-lg-4 my-3 ml-3 bg-light text-center">会員登録がお済ではない方</h4>
    </div>
    
    <div class='row my-1'>
      <div class='col-1'></div>
      <div class='col-4'>
        <%= link_to "こちら", new_customer_registration_path %> からログインしてください。
      </div>
    </div>
</div>

