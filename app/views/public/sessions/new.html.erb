<h2>ログイン</h2>
  <h3>会員の方はこちらからログイン</h3>

<%= form_with model:@customer, url: customer_session_path do |f| %>

  <div class="field">
    <span><%= f.label :"メールアドレス" %></span>
    <span><%= f.email_field :email, autofocus: true, autocomplete: "email" %></span>
  </div>

  <div class="field">
   <span><%= f.label :"パスワード" %></span>
    <span><%= f.password_field :password, autocomplete: "current-password" %></span>
  </div>

  <div class="actions">
    <%= f.submit "ログイン", class:"btn btn-primary" %>
  </div>
<% end %>

  <h3>すでに登録済みの方</h3>
    <p><%= link_to "こちら", new_customer_registration_path %> からログインしてください。</p>

