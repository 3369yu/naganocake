<div class='container'>
  <div class='row'>
    <h3 class="col-lg-3 my-3 bg-light text-center">新規会員登録</h3>
  </div>

<%= form_with model:@customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class='row my-2'>
    <div class='col-2'><%= f.label :"名前" %></div>
    <div class='col-1 text-right'><%= f.label :"(姓)" %></div>
    <div class='col-3'><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></div>
    <div class='col-1 text-right'><%= f.label :"(名)" %></div>
    <div class='col-3'><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></div>
  </div>

  <div class='row my-2'>
    <div class='col-2'><%= f.label :"フリガナ" %></div>
    <div class='col-1 text-right'><%= f.label :"(セイ)" %></div>
    <div class='col-3'><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "lase_name_kana" %></div>
    <div class='col-1 text-right'><%= f.label :"(メイ)" %></div>
    <div class='col-3'><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></div>
  </div>

  <div class='row my-2'>
    <div class='col-3'><%= f.label :"メールアドレス" %></div>
    <div class='col-4'><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
  </div>

  <div class='row my-2'>
    <div class='col-3'><%= f.label :"郵便番号(ハイフンなし)" %></div>
    <div class='col-2'><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></div>
  </div>

  <div class='row my-2'>
    <div class='col-3'><%= f.label :"住所" %></div>
    <div class='col-2'><%= f.text_field :address, autofocus: true, autocomplete: "address" %></div>
  </div>

  <div class='row my-2'>
    <div class='col-3'><%= f.label :"電話番号(ハイフンなし)" %></div>
    <div class='col-2'><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></div>
  </div>

  <div class='row my-2'>
    <div class='col-3'><%= f.label :"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em></div>
    <% end %>
   <div class='col-2'> <%= f.password_field :password, autocomplete: "new-password" %></div>
  </div>

  <div class='row my-2'>
    <div class='col-3'><%= f.label :"パスワード(確認用)" %></div>
    <div class='col-2'><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
  </div>

  <div class='row my-2'>
    <div class='col-3'></div>
    <div class='col-3'>
      <%= f.submit "新規登録", class:"btn btn-success w-75" %>
    </div>
  </div>
<% end %>

<div class="mb-5"></div>


  <div class='row my-1'>
    <h3 class="col-lg-3 my-3 bg-light text-center">既に登録済みの方</h3>
  </div>
  
  <div class='row my-1'>
    <div class='col-1'></div>
    <div class='col-5'>
      <%= link_to "こちら", new_customer_session_path %>からログインしてください。
    </div>
  </div>
</div>
