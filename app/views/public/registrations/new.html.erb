<h2>新規会員登録</h2>

<%= form_with model:@customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <span><%= f.label :"名前" %></span>
    <span><%= f.label :"(姓)" %></span>
    <span><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></span>
    <span><%= f.label :"(名)" %></span>
    <span><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></span>
  </div>

  <div class="field">
    <span><%= f.label :"フリガナ" %></span>
    <span><%= f.label :"(セイ)" %>
    <span><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "lase_name_kana" %></span>
    <span><%= f.label :"(メイ)" %></span>
    <span><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></span>
  </div>

  <div class="field">
    <span><%= f.label :"メールアドレス" %></span>
    <span><%= f.email_field :email, autofocus: true, autocomplete: "email" %></span>
  </div>

  <div class="field">
    <span><%= f.label :"郵便番号(ハイフンなし)" %></span>
    <span><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></span>
  </div>

  <div class="field">
    <span><%= f.label :"住所" %></span>
    <span><%= f.text_field :address, autofocus: true, autocomplete: "address" %></span>
  </div>

  <div class="field">
    <span><%= f.label :"電話番号(ハイフンなし)" %></span>
    <span><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></span>
  </div>

  <div class="field">
    <span><%= f.label :"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %></span>
    <span><%= f.password_field :password, autocomplete: "new-password" %></span>
  </div>

  <div class="field">
    <span><%= f.label :"パスワード(確認用)" %></span>
    <span><%= f.password_field :password_confirmation, autocomplete: "new-password" %></span>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class:"btn btn-success" %>
  </div>
<% end %>



<h2>すでに登録済みの方</h2>
  <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
