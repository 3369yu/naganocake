<h2>会員情報編集</h2>

<%= form_with model: @customer, url:  customers_update_path, method: :patch do |f| %>
  <div class="field">
  <label for="Name">氏名</label>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
  <label for="kana">フリガナ</label>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>
  <div class="field">
  <label for="postal_code">郵便番号</label>
    <%= f.text_field :postal_code %>
  </div>
  <div class="field">
  <label for="address">住所</label>
    <%= f.text_field :address %>
  </div>
  <div class="field">
  <label for="telephonenumber">電話番号</label>
    <%= f.text_field :telephone_number %>
  </div>
  <div class="field">
  <label for="email">メールアドレス</label>
    <%= f.text_field :email %>
  </div>
  <div class="actions">
    <span><%= f.submit "編集内容を保存", class:"btn btn-success" %></span>
    <span><%= link_to "退会する", '/customers/unsubscribe', class:"btn btn-danger" %></span>
  </div>
  <% end %>

