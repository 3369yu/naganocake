<div class="container">
  <div class="row">
    <h3 class="col-lg-3 my-3 bg-light text-center">会員情報編集</h3>
  </div>

  <%= form_with model: @customer, url:  customers_update_path, method: :patch do |f| %>
    <div class='row my-2'>
      <div class='col-2'>氏名</div>
      <div class='col-2 mr-3'><%= f.text_field :last_name %></div>
      <div class='col-2'><%= f.text_field :first_name %></div>
    </div>
    
    <div class='row my-2'>
      <div class='col-2'>フリガナ</div>
      <div class='col-2 mr-3'><%= f.text_field :last_name_kana %></div>
      <div class='col-2'><%= f.text_field :first_name_kana %></div>
    </div>
    <div class='row my-2'>
      <div class='col-2'>郵便番号</div>
      <div class='col-2'><%= f.text_field :postal_code %></div>
    </div>
    
    <div class='row my-2'>
      <div class='col-2'>住所</div>
      <div class='col-2'><%= f.text_field :address, :size=>"60" %></div>
    </div>
  
    <div class='row my-2'>
      <div class='col-2'>電話番号</div>
      <div class='col-2'><%= f.text_field :telephone_number %></div>
    </div>
    
    <div class='row my-2'>
      <div class='col-2'>メールアドレス</div>
      <div class='col-2'><%= f.text_field :email %></div>
    </div>
    
    <div class='row my-3'>
      <div class='col-3 offset-2'><%= f.submit "編集内容を保存", class:"btn btn-success w-75" %></div>
      <div class='col-3'><%= link_to "退会する", '/customers/unsubscribe', class:"btn btn-danger" %></div>
    </div>
  <% end %>
</div>

