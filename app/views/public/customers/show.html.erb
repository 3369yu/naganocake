<div class="container">
  <div class="row">
    <h3 class="col-lg-3 my-3 bg-light text-center">マイページ</h3>
  </div>
  
  <div class="row d-flex align-items-center">
    <div class="col-lg-2 my-2">登録情報</div>
    <div class="col-lg-2 my-2"><%= link_to "編集する", customers_information_edit_path,  class:"btn btn-success w-75" %></div>
  </div>
  
  <div class="row">
    <div class="col-lg-6 my-2">
      <table class="table table-bordered">
        <tr>
          <th scope="col", class="bg-light">氏名</th>
          <td><%= @customer.last_name %> <%= @customer.first_name  %></td>
        </tr>
        <tr>
          <th scope="col", class="bg-light">カナ</th>
          <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th scope="col", class="bg-light">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th scope="col", class="bg-light">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th scope="col", class="bg-light">電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th scope="col", class="bg-light">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-2 my-2">配送先</div>
    <div class="col-lg-2 my-2"><%= link_to "一覧を見る", addresses_path,  class:"btn btn-primary w-75" %></div>
  </div>
  
  <div class="row">
    <div class="col-lg-2 my-2">注文履歴</div>
    <div class="col-lg-2 my-2"><%= link_to "一覧を見る", orders_path,  class:"btn btn-primary w-75" %></div>
  </div>
</div>