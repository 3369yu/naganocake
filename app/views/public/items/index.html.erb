<h2>商品一覧 (全<%= @item.count %>件)</h2>

<div class="item-wrap">
  <% @item.each do |item| %>
    <p><%= link_to item_path(item.id) do %>
      <%= image_tag item.image, size: "200x200", alt: 'image' %>
    <% end %></p>
    <p><%= item.name %></p>
    <p>￥<%= number_with_delimiter(item.price) %></p>
  <% end %>
</div>