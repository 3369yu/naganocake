<table class="search">
  <tr><th>ジャンル検索</th></tr>
  <%= form_with url: items_path, method: :get do |f| %>
    <% @genres.each do |genre| %>
    <tr><td><%= link_to genre.name, items_path(genre_id: genre.id) %></td></tr>
    <% end %>
  <% end %>
  </table>

<div class="imagetag">
  <%= image_tag @item.image, size: "200x200", alt: 'image' %>
</div>

<div class="data">
  <%= @item.name %>
</div>

<div class="data">
  <%= @item.introduction %>
</div>

<div class="data">
  ¥<%= (@item.price*1.1).round %>(税込)
</div>

<% if @item.is_active == true %>
    <%= form_with model: @cart_item do |f| %>
      <%= f.hidden_field :item_id, :value => @item.id %>
      <%= f.select :amount, *[1..10] %>
      <%= f.submit "カートに入れる", class:"btn btn-success" %>
    <% end %>
<% end %>