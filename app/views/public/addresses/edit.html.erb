<div class="container">
  <div class="row">
    <h3 class="col-lg-3 my-3 bg-light text-center">配送先編集</h3>
  </div>

  <%= form_with model: @address, url: address_path, method: :patch do |f| %>
  <div class='row my-2'>
    <div class='col-lg-3'><label for="inputpostal_code">郵便番号(ハイフンなし)</div>
    <div class='col-lg-3'><%= f.text_field :postal_code %></div>
  </div>

  <div class='row my-2'>
   <div class='col-lg-3'><label for="address">住所</div>
    <div class='col-lg-3'><%= f.text_field :address, :size=>"50" %></div>
  </div>

  <div class='row my-2'>
    <div class='col-lg-3'><label for="name">氏名</div>
    <div class='col-lg-3'>  <%= f.text_field :name %></div>
    <div class='col-lg-4 text-right'><%= f.submit "変更内容を保存", class:"btn btn-success" %></div>
  </div>
  <% end %>
</div>
