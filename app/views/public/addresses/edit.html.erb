<h2>配送先編集</h2>
<%= form_with model: @address, url: address_path, method: :patch do |f| %>
  <div class="field">
  <label for="inputpostal_code">郵便番号</label>
    <%= f.text_field :postal_code %>
  </div>
  <div class="field">
    <label for="address">住所</label>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <label for="name">氏名</label>
    <%= f.text_field :name %>
    <span class="action">
      <%= f.submit "変更内容を保存", class:"btn btn-success" %></span>
  </div>
  <% end %>
