<div class="container">
  <div class="row my-2">
    <h3 class="col-lg-2 my-3 bg-light text-center">会員一覧</h3>
  </div>
  
  <div class="row mt-1">
    <div class="col-lg-10 center-block">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customer.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
              <%= customer.last_name + customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_active %>
                <p class="text-success"><strong>有効</strong></p>
              <% elsif %>
                <p class="text-muted"><strong>退会</strong></p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
      </table>
      <div class="col d-flex align-items-center text-align-center">
        <%= paginate @customer %>
      </div>
    </div>
  </div>