<div class="container">
  <div class="row my-2">
    <h3 class="col-lg-4 my-3 bg-light text-center"><%= @customer.last_name + @customer.first_name %>さん会員情報編集</h3>
  </div>

  <%= form_with model: @customer, url:  admin_customer_path, method: :patch do |f| %>
    <div class="row my-2">
      <div class='col-3'>会員ID</div>
      <div class='col-3'><%= @customer.id %></div>
    </div>
    
    <div class="row my-2">
      <div class='col-3'>氏名</div>
      <div class='col-3'><%= f.text_field :last_name,class:"form-control" %></div>
      <div class='col-3'><%= f.text_field :first_name,class:"form-control" %></div>
    </div>
    
    <div class="row my-2">
      <div class='col-3'>フリガナ</div>
      <div class='col-3'><%= f.text_field :last_name_kana,class:"form-control" %></div>
      <div class='col-3'><%= f.text_field :first_name_kana,class:"form-control" %></div>
    </div>
    
    <div class="row my-2">
      <div class='col-3'>郵便番号</div>
      <div class='col-3'><%= f.text_field :postal_code,class:"form-control" %></div>
    </div>
    
    <div class="row my-2">
      <div class='col-3'>住所</div>
      <div class='col-3'><%= f.text_field :address,class:"form-control" %></div>
    </div>
    
    <div class="row my-2">
      <div class='col-3'>電話番号</div>
      <div class='col-3'><%= f.text_field :telephone_number,class:"form-control" %></div>
    </div>
    
    <div class="row my-2">
      <div class='col-3'>メールアドレス</div>
      <div class='col-3'><%= f.text_field :email,class:"form-control" %></div>
    </div>
    
    <div class="row my-2">
      <div class='col-3'>会員ステータス</div>
      <div class='col-3'>
        <%= f.radio_button :is_active, "true" %>
        <%= f.label :is_active, "有効" %>
        <%= f.radio_button :is_active, "false" %>
        <%= f.label :is_active, "退会" %>
      </div>
    </div>


  <div class="row my-5">
    <div class="col-lg-3"></div>
    <div class="col-lg-2">
      <%= f.submit "変更を保存", class:"btn btn-success" %>
    </div>
  </div>
</div>
<% end %>