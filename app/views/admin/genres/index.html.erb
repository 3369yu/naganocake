<h2>ジャンル一覧・追加</h2>
<%= form_with model:@admin,  url: admin_genres_path do |f| %>
  <div class="field">
    <span><%= f.label :"ジャンル名" %></span>
    <span><%= f.text_field :genre, autofocus: true, autocomplete: "ジャンル名" %></span>
    <span class="action"><%= link_to "新規登録", admin_genres_path,  class:"btn btn-primary" %></span>
  </div>
<% end %>

<table class="table">
  <tr>
    <th>ジャンル</th>
    <th></th>
  </tr>
  <% @genre.each do |genre| %>
  <tr> 
   <td><%= genre.name %></td>
   <td><%= link_to "編集する", admin_genre_path(genre.id), class:"btn btn-primary" %></td>
  </tr>
  <% end %>
</table>
   