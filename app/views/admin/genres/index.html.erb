<div class="container">
  <div class="row my-3">
    <h3 class="col-lg-3 my-3 bg-light text-center">ジャンル一覧・追加</h3>
  </div>

  <div class="row my-5">
    <%= form_with model:@genre, url: admin_genres_path, method: :post do |f| %>
    <div class="d-flex align-items-center">
      <div class="col-lg-3 ml-3">ジャンル名</div>
      <div class="col-lg-4 ml-3"><%= f.text_field :name, placeholder:"ジャンル名", class: "form-control" %></div>
      <div class="col-lg-3 ml-3"><%= f.submit "新規登録", class:"btn btn-success w-100" %></div>
    <% end %>
    </div>
  </div>
  
  <div class="row my-5">
    <div class="col-lg-4">
      <table class="table">
        <thead class="thead-light text-center">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody class="text-center">
        <% @genres.each do |genre| %>
          <tr>
             <td><%= genre.name %></td>
             <td><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
</div>
