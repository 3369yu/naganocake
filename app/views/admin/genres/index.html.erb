<h2>ジャンル一覧・追加</h2>
<%= form_with model:@genre, url: admin_genres_path, method: :post do |f| %>
  <div class="field">
    <span><%= f.label :"ジャンル名" %></span>
    <span><%= f.text_field :name, autofocus: true, autocomplete: "ジャンル名" %></span>
    <span class="action">
      <%= f.submit "新規登録", class:"btn btn-success" %></span>
  </div>
<% end %>

<table class="table">
  <tr>
    <th>ジャンル</th>
    <th></th>
  </tr>
  <% @genres.each do |genre| %>
  <tr> 
   <td><%= genre.name %></td>
   <td><%= link_to "編集する", edit_admin_genre_path(genre), class:"btn btn-success" %></td>
  </tr>
  <% end %>
</table>
   