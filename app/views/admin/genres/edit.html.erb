<div class="container">
  <div class="row my-2">
    <h3 class="col-lg-3 my-3 bg-light text-center">ジャンル編集</h3>
  </div>

  <div class="row my-2">
    <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
    <div class="d-flex align-items-center">
      <div class="col-lg-3">ジャンル名</div>
      <div class="col-lg-3 mr-5">
        <%= f.text_field :name %>
      </div>
      <div class="col-2 mx-2">
        <%= f.submit "変更を保存", class:"btn btn-success ml-5" %>
      </div>
    </div>
    <% end %>
  </div>
</div>