<h2>注文履歴一覧</h2>

<table class="table">
  <tr>
    <th>購入日時</th>
    <th>購入者</th>
    <th>注文個数</th>
  </tr>
<% @order.each do |order| %>
  <tr>
    <td><%=link_to admin_order_path(order.id) do %>
        <%= l order.created_at, format: :long %>
        <% end %></td>
    <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
    <td><%= order.order_detail.sum(:quantity) %></td>
  </tr>
  <% end %>
</table>
