<div class="container-fluid">
  <div class="row mb-4">
    <div class="col-lg-1"></div>
    <h3 class="bg-light text-left my-4 ml-4">管理者ログイン</h3>
  </div>

<%= form_with model:@admin,  url: admin_session_path do |f| %>

  <div class="row mt-2">
    <div class="col-lg-3"></div>
    <%= f.label :"メールアドレス", class:"col-lg-2 control-label" %>
    <div class="col-lg-4 ml-1">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
    </div>
  </div>

  <div class="row mt-2">
    <div class="col-lg-3"></div>
    <%= f.label :"パスワード",class:"col-lg-2 control-label" %>
    <div class="col-lg-4 ml-1">
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
  </div>
  </div>


  <div class="actions row mt-2">
    <div class="col-lg-5"></div>
    <%= f.submit "ログイン", class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>
</div>
