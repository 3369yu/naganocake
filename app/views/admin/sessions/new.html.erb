<h2>管理者ログイン</h2>

<%= form_with model:@admin,  url: admin_session_path do |f| %>

  <div class="field">
    <span><%= f.label :"メールアドレス" %></span>
    <span><%= f.email_field :email, autofocus: true, autocomplete: "email" %></span>
  </div>

  <div class="field">
    <span><%= f.label :"パスワード" %></span>
    <span><%= f.password_field :password, autocomplete: "current-password" %></span>
  </div>


  <div class="actions">
    <%= f.submit "ログイン", class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>
