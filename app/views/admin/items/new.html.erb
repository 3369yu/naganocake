<h2>商品登録</h2>
<%= form_with model:@item, url: admin_items_path, method: :post do |f| %>
  <div class="field">
    <%= f.label :"商品画像" %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="field">
    <%= f.label :"商品名" %>
    <%= f.text_field :name, autocomplete: "商品名" %>
  </div>
  <div class="field">
    <%= f.label :"商品説明" %>
    <%= f.text_area :introduction, autocomplete: "ここに説明文を記述します" %>
  </div>
  <div class="field">
    <f.label :"ジャンル" %>
    <f.collection_select :genre_id, Genre.all, :name, include_blank: "選択して下さい" %>
  </div>
  <div class="field">
    <%=f.label :"税抜価格" %>
    <%=f.text_field :price, autocomplete: 1000 %>円
  </div>
  <%= f.submit "新規登録", class:"btn btn-success" %>
  <% end %>
  