<div class="container">
  <div class="row mt-5">
    <h3 class="bg-light text-bark">商品新規登録</h3>
  </div>

  <%= form_with model:@item, url: admin_items_path, method: :post do |f| %>
  <div class="d-flex align-items-center justify-content-center">
    <div class="col-lg-2 my-1">商品画像</div>
    <div class="col-lg-5 my-1">
      <%= f.file_field :image, accept: "image/*" %>
    </div>
  </div>

  <div class="d-flex align-items-center justify-content-center">
    <div class="col-lg-2 my-1">商品名</div>
    <div class="col-lg-5 my-1">
      <%= f.text_field :name, placeholder:"商品名" %>
    </div>
  </div>

  <div class="d-flex align-items-center justify-content-center">
    <div class="col-lg-2 my-1">商品説明</div>
    <div class="col-lg-5 my-1">
      <%= f.text_area :introduction, placeholder:"ここに説明文を記述します" %>
    </div>
  </div>

  <div class="d-flex align-items-center justify-content-center">
    <div class="col-lg-2 my-1">ジャンル</div>
    <div class="col-lg-5 my-1">
      <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), { include_blank: '--選択してください--' }, { class: 'form-control' , required: true } %>
    </div>
  </div>

  <div class="d-flex align-items-center justify-content-center">
    <div class="col-lg-2 my-1">税抜価格</div>
    <div class="col-lg-5 my-1">
      <%=f.text_field :price, placeholder:1000 %>円
    </div>
  </div>

  <div class="d-flex align-items-center justify-content-center">
    <div class="col-lg-2 my-1">販売ステータ</div>
    <div class="col-lg-5 my-1">
      <%= f.radio_button :is_active, "true" %>
      <%= f.label :is_active, "販売中" %>
      <%= f.radio_button :is_active, "false" %>
      <%= f.label :is_active, "販売停止中" %>
    </div>
  </div>

  <div class="d-flex align-items-center justify-content-center">
    <div class="col-2 my-1"></div>
    <div class="col-5 my-1">
      <%= f.submit "新規登録", class:"btn btn-success" %>
    </div>
  </div>
  <% end %>
  </div>
