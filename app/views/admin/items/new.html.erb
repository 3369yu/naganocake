<h2>商品登録</h2>
<%= form_with model:@item, url: admin_items_path, method: :post do |f| %>
  <div class="field">
    <%= f.label :"商品画像" %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="field">
    <%= f.label :"商品名" %>
    <%= f.text_field :name, placeholder:"商品名" %>
  </div>
  <div class="field">
    <%= f.label :"商品説明" %>
    <%= f.text_area :introduction, placeholder:"ここに説明文を記述します" %>
  </div>
  <div class="field">
    <%= f.label :"ジャンル" %>
    <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), { include_blank: '--選択してください--' } %>
  </div>
  <div class="field">
    <%=f.label :"税抜価格" %>
    <%=f.text_field :price, placeholder:1000 %>円
  </div>
  <div class="fild">
    <%=f.label :"販売ステータス" %>
    <%= f.radio_button :is_active, "true" %>
    <%= f.label :is_active, "販売中" %>
    <%= f.radio_button :is_active, "false" %>
    <%= f.label :payment_method_transfer, "販売停止中" %>
  </div>
  <%= f.submit "新規登録", class:"btn btn-success" %>
  <% end %>
