<h2>商品編集</h2>
<%= form_with model: @item, url: admin_item_path(@item), method: :patch  do |f| %>
  <div class="field"></div>
  <label for="image">商品画像</label>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <label for="name">商品名</label>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <label for="introduction">商品説明</label>
    <%= f.text_area :introduction %>
  </div>
  <div class="field">
    <label for="genre">ジャンル</label>
    <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
  </div>
  <div class="field">
    <label for="price">税抜価格</label>
    <%= f.text_field :price %>
  </div>
  <div class="fild">
    <%= f.label :"販売ステータス" %>
    <%= f.radio_button :is_active, "true" %>
    <%= f.label :is_active, "販売中" %>
    <%= f.radio_button :is_active, "false" %>
    <%= f.label :is_active, "販売停止中" %>
  </div>
  <%= f.submit "変更を保存", class:"btn btn-success" %>
<% end %>