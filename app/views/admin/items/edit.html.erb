<div class="container">
  <div class="row">
    <h3 class="col-lg-2 mt-3 mr-auto bg-light text-center">商品編集</h3>
  </div>
  
  <%= form_with model: @item, url: admin_item_path(@item), method: :patch  do |f| %>
    <div class="d-flex align-items-center justify-content-center">
      <div class="col-2 my-1">商品画像</div>
      <div class="col-5 my-1"><%= f.file_field :image %></div>
    </div>
    
    <div class="d-flex align-items-center justify-content-center">
      <div class="col-2 my-1">商品名</div>
      <div class="col-5 my-1"><%= f.text_field :name, class: "form-control" %></div>
    </div>
    
    <div class="d-flex align-items-center justify-content-center">
      <div class="col-2 my-1">商品説明</div>
      <div class="col-5 my-1"><%= f.text_area :introduction, class: "form-control" %></div>
    </div>
    
    <div class="d-flex align-items-center justify-content-center">
      <div class="col-2 my-1">ジャンル</div>
      <div class="col-5 my-1"><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></div>
    </div>
    
    <div class="d-flex align-items-center justify-content-center">
      <div class="col-2 my-1">税抜価格</div>
      <div class="col-5 my-1"><%= f.text_field :price %></div>
    </div>
    
    <div class="d-flex align-items-center justify-content-center">
      <div class="col-2 my-1">販売ステータス</div>
      <div class="col-5 my-1">
        <%= f.radio_button :is_active, "true" %>
        <%= f.label :is_active, "販売中" %>
        <%= f.radio_button :is_active, "false" %>
        <%= f.label :is_active, "販売停止中" %>
      </div>
    </div>
    
    <div class="d-flex align-items-center justify-content-center">
      <div class="col-2 my-1"></div>
      <div class="col-5 my-1">
        <%= f.submit "変更を保存", class:"btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>