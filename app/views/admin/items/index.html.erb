<div class="container">
  <div class="row mt-1">
    <h3 class="col-lg-2 mt-3 mr-auto bg-light text-center">商品一覧</h3>
    <div class="d-flex align-items-center">
      <%= link_to "+", "/admin/items/new", class:"btn btn-light rounded-circle" %>
    </div>
    </div>
  <div class="row mt-1">
    <div class="col-lg-12">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @item.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td>
              <%= link_to admin_item_path(item.id) do %>
              <%= item.name %>
              <% end %>
            </td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active %>
                <p class="text-success"><strong>販売中</strong></p>
              <% elsif %>
                <p class="text-muted"><strong>販売停止中</strong></p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
<div class="col d-flex align-items-center text-align-center">
  <%= paginate @item %>
</div>
</div>