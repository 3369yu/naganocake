<h2>商品一覧</h2>
<table class="table">
  <tr>
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜価格</th>
    <th>ジャンル</th>
    <th>ステータス</th>
  </tr>
  <% @item.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td>
        <%= link_to admin_item_path(item.id) do %>
        <%= item.name %>
        <% end %>
      </td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td>
        <% if item.is_active %>
          <p class="text-success"><strong>販売中</strong></p>
        <% elsif %>
          <p class="text-muted"><strong>販売停止中</strong></p>
      </td>
    </tr>
  <% end %>
</table>
<%= paginate @item %>
<% end %>